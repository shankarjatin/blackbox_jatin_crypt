<%- include("./partials/header.ejs"); %>
<div class="leaderboard_heading">
  <h1 id="leaderboard_rulesheading">OVERALL LEADERBOARD</h1>
  <a href="/blackbox"><button type="button" id="lbutton3" class="original_leaderboard">Blackbox</button></a>
  <a href="/game"><button type="button" id="lbutton3" class="original_leaderboard">Crypthunt</button></a>
  <a href="/leaderboard"><button type="button" id="lbutton3" class="original_leaderboard">Crypthunt Leaderboard</button></a>
